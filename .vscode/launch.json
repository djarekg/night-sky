{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch api",
      "cwd": "${workspaceFolder}/apps/api",
      "request": "launch",
      "type": "node-terminal",
      "command": "pnpm run dev",
      "skipFiles": ["**/<node_internals>/**"],
      "sourceMaps": true,
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Launch server-side",
      "program": "${workspaceFolder}/apps/demo/app/entry.server.tsx",
      "cwd": "${workspaceFolder}/apps/demo",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "runtimeArgs": ["--import", "./register.js"],
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "presentation": {
        "hidden": false,
        "group": "2",
        "order": 1
      }
    },
    {
      "name": "Launch client-side",
      "cwd": "${workspaceFolder}/apps/demo",
      "request": "launch",
      "type": "node-terminal",
      "command": "pnpm run dev",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "presentation": {
        "hidden": false,
        "group": "2",
        "order": 2
      }
    },
    {
      "name": "Launch app",
      "type": "chrome",
      "request": "launch",
      "cwd": "${workspaceFolder}/apps/demo",
      "webRoot": "${workspaceFolder}/apps/demo",
      "url": "http://localhost:5173/",
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMaps": true,
      "smartStep": true,
      "presentation": {
        "hidden": false,
        "group": "2",
        "order": 3
      }
    }
  ],
  "compounds": [
    {
      "name": "debug app",
      "configurations": ["Launch api", "Launch client-side", "Launch app"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "1",
        "order": 1
      }
    }
  ]
}
